  <property name="project.jdk.home" value="${jdk.home.10}"/>
  <property name="project.jdk.bin" value="${jdk.bin.10}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.10"/>
  
  
  <!-- Project Libraries -->
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <fileset dir="${javac2.home}">
      <include name="javac2.jar"/>
      <include name="jdom.jar"/>
      <include name="asm-all*.jar"/>
      <include name="forms-*.jar"/>
    </fileset>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module Frogger -->
  
  <dirname property="module.frogger.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.frogger" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.frogger" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.frogger" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.frogger" value="-encoding UTF-8 -source 10 -target 10 ${compiler.args}"/>
  
  <property name="frogger.output.dir" value="${module.frogger.basedir}/out/production/Frogger"/>
  <property name="frogger.testoutput.dir" value="${module.frogger.basedir}/out/test/Frogger"/>
  
  <path id="frogger.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="frogger.module.production.classpath">
    <path refid="${module.jdk.classpath.frogger}"/>
  </path>
  
  <path id="frogger.runtime.production.module.classpath">
    <pathelement location="${frogger.output.dir}"/>
  </path>
  
  <path id="frogger.module.classpath">
    <path refid="${module.jdk.classpath.frogger}"/>
    <pathelement location="${frogger.output.dir}"/>
    <pathelement location="${basedir}/lib/hamcrest-core-1.3.jar"/>
    <pathelement location="${basedir}/lib/junit-4.12.jar"/>
  </path>
  
  <path id="frogger.runtime.module.classpath">
    <pathelement location="${frogger.testoutput.dir}"/>
    <pathelement location="${frogger.output.dir}"/>
    <pathelement location="${basedir}/lib/hamcrest-core-1.3.jar"/>
    <pathelement location="${basedir}/lib/junit-4.12.jar"/>
  </path>
  
  
  <patternset id="excluded.from.module.frogger">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.frogger">
    <patternset refid="excluded.from.module.frogger"/>
  </patternset>
  
  <path id="frogger.module.sourcepath">
    <dirset dir="${module.frogger.basedir}">
      <include name="src"/>
      <include name="resources"/>
    </dirset>
  </path>
  
  <path id="frogger.module.test.sourcepath">
    <dirset dir="${module.frogger.basedir}">
      <include name="test"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.frogger" depends="compile.module.frogger.production,compile.module.frogger.tests" description="Compile module Frogger"/>
  
  <target name="compile.module.frogger.production" depends="register.custom.compilers" description="Compile module Frogger; production classes">
    <mkdir dir="${frogger.output.dir}"/>
    <javac2 destdir="${frogger.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.frogger}/javac">
      <compilerarg line="${compiler.args.frogger}"/>
      <bootclasspath refid="frogger.module.bootclasspath"/>
      <classpath refid="frogger.module.production.classpath"/>
      <src refid="frogger.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.frogger"/>
    </javac2>
    
    <copy todir="${frogger.output.dir}">
      <fileset dir="${module.frogger.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.frogger.basedir}/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.frogger.tests" depends="register.custom.compilers,compile.module.frogger.production" description="compile module Frogger; test classes" unless="skip.tests">
    <mkdir dir="${frogger.testoutput.dir}"/>
    <javac2 destdir="${frogger.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.frogger}/javac">
      <compilerarg line="${compiler.args.frogger}"/>
      <bootclasspath refid="frogger.module.bootclasspath"/>
      <classpath refid="frogger.module.classpath"/>
      <src refid="frogger.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.frogger"/>
    </javac2>
    
    <copy todir="${frogger.testoutput.dir}">
      <fileset dir="${module.frogger.basedir}/test">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.frogger" description="cleanup module">
    <delete dir="${frogger.output.dir}"/>
    <delete dir="${frogger.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.frogger" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.frogger" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>