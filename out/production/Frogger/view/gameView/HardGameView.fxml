<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import java.net.URL?>
<Pane fx:id="gameStage" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      style="-fx-background-color: rgb(0,0,0);"
      fx:controller="controller.gameController.HardGameController"
      prefHeight="800.0" prefWidth="600.0">
    <stylesheets>
        <URL value="@/css/gameStage.css" />
    </stylesheets>

    <children>
        <ImageView fitHeight="800" fitWidth="600" layoutX="0" layoutY="0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@/img/background/background.png" />
            </image>
        </ImageView>
    </children>
</Pane>
